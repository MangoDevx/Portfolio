---
import "../styles/global.css";
import ExperienceCard from "./ExperienceCard.astro";
import flsouthernLogo from "../assets/fsclogo.jpg";
import easternFloridaLogo from "../assets/efsclogo.jpg";

const skills = [
    { name: "C#", iconClass: "devicon-csharp-plain" },
    { name: ".NET", iconClass: "devicon-dotnetcore-plain" },
    { name: "Git", iconClass: "devicon-git-plain" },
    { name: "Docker", iconClass: "devicon-docker-plain" },
    { name: "Avalonia", iconSrc: "/src/assets/avalonia.svg" },
    { name: "Figma", iconClass: "devicon-figma-plain" },
];
---

<section
    id="skills"
    class="snap-start h-screen [scroll-snap-stop:always] py-8 flex flex-col items-center justify-center bg-gray-50 dark:bg-[#1a1a1a]"
>
    <div class="max-w-6xl w-full px-6">
        <div class="text-center mb-12">
            <h2 class="text-5xl font-extrabold text-gradient-smooth animate-glow">
                Education & Skills
            </h2>
            <p class="mt-4 text-gray-600 dark:text-gray-400">
                My academic background and professional toolset
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
            <div class="h-full">
                <ExperienceCard
                    logoSrc={flsouthernLogo.src}
                    name="Florida Southern College"
                    position="B.S. in Computer Science"
                    link="https://www.flsouthern.edu/"
                    dates="2021-2023"
                    description={`
            <ul class="list-disc list-inside space-y-2 text-gray-700 dark:text-gray-300">
              <li>Graduated Cum Laude</li>
              <li>Major coursework: Data Structures, Algorithms, Databases, Software Engineering</li>
              <li>Senior project: Real-time location based group chats</li>
            </ul>
          `}
                    class={`
            h-full
            group hover:scale-105 transition-transform duration-300
            bg-gradient-to-br from-white to-gray-100 dark:from-gray-800 dark:to-gray-700
            rounded-2xl p-8
            shadow-md hover:shadow-lg
            flex flex-col justify-between
          `}
                />
            </div>

            <div class="h-full">
                <ExperienceCard
                    logoSrc={easternFloridaLogo.src}
                    name="Eastern Florida State College"
                    position="Associates of Arts"
                    link="https://www.easternflorida.edu/"
                    dates="2019-2021"
                    description={`
            <ul class="list-disc list-inside space-y-2 text-gray-700 dark:text-gray-300">
              <li>General education courses</li>
              <li>Consistent Dean&#39;s list recipient</li>
            </ul>
          `}
                    class={`
            h-full
            group hover:scale-105 transition-transform duration-300
            bg-gradient-to-br from-white to-gray-100 dark:from-gray-800 dark:to-gray-700
            rounded-2xl p-8
            shadow-md hover:shadow-lg
            flex flex-col justify-between
          `}
                />
            </div>
        </div>

        <div class="text-center mb-6">
            <h3 class="text-3xl font-semibold text-gray-800 dark:text-gray-200">
                Technical Skills
            </h3>
        </div>
        <div
            class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-6"
        >
            {
                skills.map((skill) => (
                    <div
                        class="
            flex flex-col items-center justify-center
            p-4 bg-white/10 dark:bg-white/5 backdrop-blur-sm
            rounded-2xl hover:scale-105 transition-transform
            duration-200 shadow-lg hover:shadow-2xl
          "
                    >
                        {skill.iconClass ? (
                            <i class={`${skill.iconClass} colored text-4xl`} />
                        ) : (
                            <img
                                src={skill.iconSrc}
                                alt={`${skill.name} icon`}
                                class="h-10 w-10 object-contain"
                            />
                        )}
                        <span class="mt-2 font-medium text-gray-100">
                            {skill.name}
                        </span>
                    </div>
                ))
            }
        </div>
    </div>
</section>
