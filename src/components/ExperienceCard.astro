---
interface Props {
  logoSrc: string;
  name: string;
  link: string;
  position: string;
  description: string;
  dates: string;
}
const { logoSrc, name, link, position, description, dates } = Astro.props;
---
<a
  href={link}
  target="_blank"
  rel="noopener noreferrer"
  class="
    block
    bg-white dark:bg-gray-800
    border border-gray-200 dark:border-gray-700
    rounded-xl
    shadow-md dark:shadow-none
    hover:shadow-lg dark:hover:shadow-lg
    transition-shadow duration-200
    overflow-hidden
  "
>
  <div class="flex items-center">
    <img
      src={logoSrc}
      alt={`${name} logo`}
      class="w-24 h-24 object-contain mx-4 my-auto flex-shrink-0"
    />
    <div class="p-4 flex flex-col justify-center">
      <h3 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-1">
        {name}
      </h3>
      <p class="text-base font-medium text-gray-700 dark:text-gray-300 mb-2">
        {position}
      </p>
      <div class="text-gray-600 dark:text-gray-400 mb-4" set:html={description}></div>
      <p class="text-sm text-gray-500 dark:text-gray-500">{dates}</p>
    </div>
  </div>
</a>
