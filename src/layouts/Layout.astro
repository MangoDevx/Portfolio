---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Keith's Portfolio</title>
    <meta
      name="description"
      content="Keith's personal portfolio showcasing experience in software engineering, photography, and technical skills."
    />
    <meta
      name="keywords"
      content="Keith, software engineering, photography, portfolio, C#, .NET, Git, Docker, Avalonia, Figma"
    />
    <meta name="author" content="Keith" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://keithrm.com/" />
    <meta property="og:site_name" content="Keith's Portfolio" />
    <meta property="og:title" content="Keith's Portfolio" />
    <meta
      property="og:description"
      content="Explore Keith's projects, work experience, and technical skills."
    />
    <meta property="og:image" content="https://keithrm.com/og-image.png" />
    <meta property="og:locale" content="en_US" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://keithrm.com/" />
    <meta name="twitter:title" content="Keith's Portfolio" />
    <meta
      name="twitter:description"
      content="Explore Keith's projects, work experience, and technical skills."
    />
    <meta name="twitter:image" content="https://keithrm.com/og-image.png" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css"
    />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body
    class="flex flex-col min-h-screen dark:bg-[#121212] text-gray-800 dark:text-gray-200"
  >
    <Navbar />
    <main class="flex-grow h-screen overflow-y-scroll scroll-smooth">
      <slot />
    </main>
  </body>
</html>
